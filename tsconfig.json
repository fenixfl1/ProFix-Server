{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "public",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "*"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ]
}